{
	// Place your snippets for java here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"output": {
		"prefix": "ot",
		"body": "System.out.print(${0:\"\"});",
		"description": "終端機輸出"
	},
	"output and skip line": {
		"prefix": "otl",
		"body": "System.out.println(${0:\"\"});",
		"description": "終端機跳行輸出"
	},
	"output and format": {
		"prefix": "otf",
		"body": "System.out.printf(\"$0\", ${1:a});",
		"description": "終端機格式化輸出"
	},
	"Scanner object": {
		"prefix": "sco",
		"body": [
			"Scanner ${1:scanner} = new Scanner(System.in);",
			"$0",
			"${1:scanner}.close();"
		],
		"description": "終端機輸入物件"
	},
	"next": {
		"prefix": "scn",
		"body": "scanner.next();",
		"description": "輸入字串(不含空白)"
	},
	"nextLine": {
		"prefix": "scl",
		"body": "scanner.nextLine();",
		"description": "輸入字串(包含空白)"
	},
	"nextBoolean": {
		"prefix": "scb",
		"body": "scanner.nextBoolean();",
		"description": "輸入布林值"
	},
	"nextShort": {
		"prefix": "scs",
		"body": "scanner.nextShort();",
		"description": "輸入短整數"
	},
	"nextInt": {
		"prefix": "sci",
		"body": "scanner.nextInt();",
		"description": "輸入整數"
	},
	"nextLong": {
		"prefix": "scg",
		"body": "scanner.nextLong();",
		"description": "輸入長整數"
	},
	"nextFloat": {
		"prefix": "scf",
		"body": "scanner.nextFloat();",
		"description": "輸入單精浮點數"
	},
	"nextDouble": {
		"prefix": "scd",
		"body": "scanner.nextDouble();",
		"description": "輸入雙精浮點數"
	},
	"convert to type": {
		"prefix": "tp",
		"body": "(${0:int}) ${1:a}",
		"description": "型態轉換"
	},
	"if...else": {
		"prefix": "ie",
		"body": [
			"if (${1:true}) {",
			"    $2",
			"} else {",
			"    $0",
			"}"
		],
		"description": "if...else結構"
	},
	"if...else if...else": {
		"prefix": "ef",
		"body": [
			"if (${1:false}) {",
			"    $2",
			"} else if (${3:true}) {",
			"    $4",
			"} else {",
			"    $0",
			"}"
		],
		"description": "if...else if...else結構"
	},
	"switch...case": {
		"prefix": "sh",
		"body": [
			"switch (${1:0}) {",
			"    case ${2:1}:",
			"        $3",
			"        break;",
			"    default:",
			"        $0",
			"        break;",
			"}"
		],
		"description": "模式比對"
	},
	"for loop": {
		"prefix": "fp",
		"body": [
			"for (int ${1:i} = ${2:0}; ${3:i} < ${4:10}; ${5:i}++) {",
			"   $0",
			"}"
		],
		"description": "for迴圈"
	},
	"foreach": {
		"prefix": "fe",
		"body": [
			"for (var ${1:i} : ${2:a}) {",
			"   $0",
			"}"
		],
		"description": "foreach迴圈"
	},
	"while": {
		"prefix": "we",
		"body": [
			"while (${1:true}) {",
			"    $0",
			"}"
		],
		"description": "while迴圈"
	},
	"do...while": {
		"prefix": "dw",
		"body": [
			"do {",
			"    $1",
			"} while (${0:false});"
		],
		"description": "do...while迴圈"
	},
	"function": {
		"prefix": "fun",
		"body": [
			"static ${1:void} ${2:name}($3) {",
			"    $0",
			"}"
		],
		"description": "函數"
	},
	"class": {
		"prefix": "cs",
		"body": [
			"class ${1:Name} {",
			"    public ${2:int} ${3:age};",
			"    public ${1:Name}(${2:int} ${4:age}) {",
			"        this.${3:age} = ${4:age};",
			"    }",
			"    public ${5:void} ${6:show}($7) {",
			"        $0",
			"    }",
			"}"
		],
		"description": "類別"
	},
	"import": {
		"prefix": "it",
		"body": "import java.${1:util}.${0:Scanner};",
		"description": "導入模組"
	},
	"try...catch": {
		"prefix": "tch",
		"body": [
			"try {",
			"    $1",
			"} catch (${2:Exception} e) {",
			"    $0",
			"}"
		],
		"description": "基本例外處理"
	},
	"try...catch...finally": {
		"prefix": "tcf",
		"body": [
			"try {",
			"    $1",
			"} catch (${2:Exception} e) {",
			"    $3",
			"} finally {",
			"    $0",
			"}",
		],
		"description": "例外處理"
	},
}