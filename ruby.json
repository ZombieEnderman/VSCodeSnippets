{
	"output and skip line": {
		"prefix": "ps",
		"body": "puts ${0:Object}",
		"description": "終端機跳行輸出"
	},
	"output": {
		"prefix": "pt",
		"body": "print(${0:Object})",
		"description": "終端機輸出"
	},
	"def": {
		"prefix": "df",
		"body": [
			"def ${1:name}(${2:params})",
			"  ${0:nil}",
			"end"
		],
		"description": "函數"
	},
	"if...else": {
		"prefix": "ie",
		"body": [
			"if ${1:true}",
			"  ${2:nil}",
			"else",
			"  ${0:nil}",
			"end"
		],
		"description": "if...else結構"
	},
	"if...elsif...else": {
		"prefix": "ef",
		"body": [
			"if ${1:false}",
			"  ${2:nil}",
			"elsif ${3:true}",
			"  ${4:nil}",
			"else",
			"  ${0:nil}",
			"end"
		],
		"description": "if...elsif...else結構"
	}
}